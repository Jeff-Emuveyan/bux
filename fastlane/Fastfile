default_platform(:android)

platform :android do
  desc "Runs all the tests"
  lane :test do
    gradle(task: "test")
  end

  desc "Submit a new Beta Build to Crashlytics Beta"
  lane :beta do
    gradle(task: "clean assembleRelease")
    crashlytics

    # sh "your_script.sh"
    # You can also use other beta testing services here
  end

  desc "Deploy a new version to the Google Play"
  lane :deploy do
    gradle(task: "clean assembleRelease")
    upload_to_play_store
  end

  lane :upload_to_firebase_app_distribution do
    gradle(
      task: 'assemble',
      build_type: 'Release'
    )

    firebase_app_distribution(
      app: "1:540432356383:android:d372922f29544a7f2d712a",
      testers: "veyanjeff@gmail.com",
      firebase_cli_token: "1//03n1urHwXOjQcCgYIARAAGAMSNwF-L9IrLnsoN6XQlvX7YxHBcRCrt82M-4h73C4i42qCSHi0cjweCpz3037q2Q5BrkHBi8yTJSQ",
      release_notes: "Initial push to App Distribution"
    )
  end

    lane :upload_to_play_store_internal_test do
      # ...
      gradle(
        task: "clean bundleRelease",
        properties: {
                  "android.injected.signing.store.file" => "key.jks",
                  "android.injected.signing.store.password" => "123456",
                  "android.injected.signing.key.alias" => "key0",
                  "android.injected.signing.key.password" => "123456",
                }
      )
      upload_to_play_store(track: 'internal')
      # ...
    end
